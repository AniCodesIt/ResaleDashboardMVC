@model IEnumerable<ResaleDashboardMVC.Models.InventoryListItem>
@{
    ViewBag.Title = "Index";
}

<h2>Inventory Index</h2>

<p>
    @Html.ActionLink("Create New Inventory Item", "Create")
</p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
    
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockOnHand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>

        </tr>
       
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.InvID)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Source)
                </td>
                <td>
                    @Html.DisplayFor(x => item.COG)
                </td>
                <td>
                    @Html.DisplayFor(x => item.StockOnHand)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.InvID })
                    @Html.ActionLink("Details", "Details", new { id = item.InvID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.InvID })
                </td>
            </tr>
        }
    </table>
    


